<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/top_shape" />

    <View
        android:id="@+id/view2"
        android:layout_width="297dp"
        android:layout_height="310dp"
        android:background="#CFF8FA"
        app:circularflow_radiusInDP="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:srcCompat="@drawable/add_photo" />

    <EditText
        android:id="@+id/yer_ismi"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Yer ismi"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />


    <EditText
        android:id="@+id/aciklama"
        android:layout_width="265dp"
        android:layout_height="45dp"
        android:background="#fff"
        android:ems="10"
        android:gravity="center"
        android:hint="Açıklama"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/yer_ismi"
        app:layout_constraintStart_toStartOf="@+id/yer_ismi"
        tools:layout_editor_absoluteY="372dp" />

    <Button
        android:id="@+id/gezle"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="#00E1EF"
        android:onClick="gezle"
        android:text="GEZLE"

        android:textColor="#000"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>