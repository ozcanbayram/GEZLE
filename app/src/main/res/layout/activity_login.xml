<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/shape" />

        <View
            android:id="@+id/view2"
            android:layout_width="297dp"
            android:layout_height="138dp"
            android:layout_marginTop="16dp"
            android:background="#CFF8FA"
            app:circularflow_radiusInDP="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/ad_soyad"
            android:layout_width="265dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="E-posta"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />


        <EditText
            android:id="@+id/pasword"
            android:layout_width="265dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:background="#fff"
            android:ems="10"
            android:gravity="center"
            android:hint="Parola"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/ad_soyad" />


        <Button
            android:id="@+id/giris"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#00E1EF"
            android:onClick="giris"
            android:text="GİRİŞ YAP"
            android:textColor="#000"
            android:textFontWeight="@integer/material_motion_duration_long_2"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pasword"
            app:srcCompat="@drawable/giris_resmi" />


    </androidx.constraintlayout.widget.ConstraintLayout>

